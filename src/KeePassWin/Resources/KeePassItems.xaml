<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mvvm="using:KeePassWin.Mvvm"
                    xmlns:models="using:KeePass.Models"
                    xmlns:local="using:KeePassWin">
    <!-- TODO: Switch to x:Bind when it works. As of 2/15/2015, this causes the error: XBF generation error code 0x09c4 -->

    <DataTemplate x:Name="KeePassGroupTemplate">
        <StackPanel Orientation="Horizontal">
            <SymbolIcon Symbol="Folder" />
            <TextBlock Margin="10,0,0,0" Text="{Binding Path=Name}" TextTrimming="WordEllipsis" />
        </StackPanel>
    </DataTemplate>

    <!--
        In order to use this template, the following must be set in the root grid element of the XAML:
            Tag="{Binding}" x:Name="root"
        And a ICommand<string> named CopyCommand must be available
    -->
    <DataTemplate x:Name="KeePassEntryTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Margin="10,0,0,0" Text="{Binding Path=Title}" Style="{ThemeResource EntryItemTitleStyle}" TextTrimming="WordEllipsis" />
                <TextBlock Margin="10,0,0,0" Text="{Binding Path=UserName}" Style="{ThemeResource EntryItemUserNameStyle}" TextTrimming="WordEllipsis" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,0,0,0">
                <AppBarButton Label="Username" Command="{Binding Tag.CopyCommand, ElementName=root}" CommandParameter="{Binding Path=UserName}">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Copy" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Password" Command="{Binding Tag.CopyCommand, ElementName=root}" CommandParameter="{Binding Path=Password}">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Copy" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>